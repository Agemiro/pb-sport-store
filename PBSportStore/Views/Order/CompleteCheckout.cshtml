@model Order

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CompleteMessageCheckout</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Client : <strong>@Model.Name</strong></p>
            <p>Order date : <strong>@Model.OrderDelivered</strong></p>
            <p>Order number : <strong>@Model.OrderId</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantity</th>
                    <th>Product</th>
                    <th>Price</th>
                </tr>
                @foreach(var item in Model.OrderItems)
                {
                    <tr>
                        <td><img src="@item.Product.ImageUrl" width="40" height="40"/></td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price</td>
                    </tr>
                }
            </table>
            <h4>Total order value: <strong>@(((decimal)ViewBag.TotalOrder).ToString("c2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center" >
    <h3>
        <a class="new-link text-info" asp-controller="Home" asp-action="Index">Back</a>
    </h3>
</div>