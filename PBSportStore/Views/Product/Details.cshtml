@model Product

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImageUrl" class="img-fluid" alt="...">
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.Name</h2>
                <p class="card-text"><h5>@Model.DetailedDescription</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Product" asp-action="List"
                        class="btn btn-outline-info">See all product</a>
                    <a class="btn btn-primary" id="cardButton" asp-controller="ShoppingCart"
                    asp-action="AddItemToShoppingCart" asp-route-productId="@Model.ProductId">
                    Add @Model.Name to cart</a>
                </p>
            </div>
        </div>
    </div>
</div>