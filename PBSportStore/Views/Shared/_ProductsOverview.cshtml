@model Product

<link rel="stylesheet" href="~/css/ProductsOverviewStyleSheet.css" asp-append-version="true" />

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl" class="img-fluid image-size" /></p>
    <h3>Price: @Model.Price.ToString("c")</h3>

    <h4>
        <a asp-controller="Product" asp-action="Details" 
            asp-route-productId="@Model.ProductId">@Model.Name</a>
    </h4>

    <p>@Model.ShortDescription</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCart"
            asp-action="AddItemToShoppingCart" asp-route-ProductId="@Model.ProductId">
            Add to cart
        </a>
        </p>
    </div>
</div>